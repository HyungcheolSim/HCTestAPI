<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hansol.spring.product.dao.EmployeeDAO">
    <select id="selectEmployeeData" resultType="com.hansol.spring.product.dto.EmployeeDTO">
        select *
        from employee
    </select>
    <insert id="insertEmployeeData" parameterType="com.hansol.spring.product.dto.EmployeeDTO">
        insert into employee
        values (e_name,e_company,e_rank,e_phone)
    </insert>
    <select id="selectEmployeeDataById" parameterType="int" resultType="com.hansol.spring.product.dto.EmployeeDTO">
        select *
        from employee
        where e_id = #{e_id}
    </select>
    <update id="updateEmployeeData" parameterType="EmployeeDTO">
        update
            employee
        set e_name=#{e_name},e_company=#{e_company},e_rank=#{e_rank},e_phone=#{e_phone}
        where e_id = #{e_id}
    </update>
    <delete id="deleteEmployeeDataById" parameterType="int">
        delete
        from employee
        where e_id = #{e_id}
    </delete>


</mapper>